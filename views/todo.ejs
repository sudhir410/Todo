<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>To do App</title>
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <header>To Do App</header>
    <br />
    <div class="container">
      <form action="/todo/add" method="POST">
        <input type="text" class="form-control" name="todoname" />
        <button class="btn btn-primary">Submit</button>
      </form>
      <%data.forEach( todo =>{ %>
      <div class="todo">
        <% if(todo.taskstatus) {%>
        <p style="margin-right: 2px" class="complete space">
          <%= todo.todoname %>
        </p>
        <%} else {%>
        <p style="margin-right: 2px" class="space"><%= todo.todoname %></p>
        <form action="/update/<%= todo._id%>/todo?_method=PUT" method="POST">
          <button class="btn btn-secondary" style="margin-right: 2px">
            Mark Complete
          </button>
        </form>
        <%}%>
        <form action="/delete/<%= todo._id%>/todo?_method=DELETE" method="POST">
          <button class="btn btn-danger" style="margin-right: 2px">
            Delete
          </button>
        </form>
      </div>
      <%}) %>
    </div>
  </body>
</html>
